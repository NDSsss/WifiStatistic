<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_filter_choose_file"
        android:textSize="17dp"
        android:text="Выберите файл для импорта истории"
        android:layout_width="match_parent"
        android:minHeight="30dp"
        android:layout_height="wrap_content" />
    <TabHost
        android:layout_below="@+id/tv_filter_choose_file"
        android:id="@+id/th_fragment_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/th_fragment_filter"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_filtred_points"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_filtred_points_by_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_filtred_points_by_channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
        </LinearLayout>
    </TabHost>
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/iv_share_statistic"
        android:src="@drawable/ic_share"
        android:layout_width="30dp"
        android:layout_height="30dp" />
</RelativeLayout>